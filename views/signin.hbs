{{!-- signin --}}
<div class="form-wrapper">
<form class="signup-form" action="/signin" method="POST">
   <div class="form-group">
    <label for="exampleInputEmail1">Username</label>
    <input type="text" name="username" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" autocomplete="off" autofocus>
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Password</label>
    <input type="password" name="password" class="form-control" id="exampleInputPassword1" minlength="8" autocomplete="off">
  </div>
  <button type="submit" class="btn btn-primary">Войти</button>
</form>
</div>
